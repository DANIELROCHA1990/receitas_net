<%= form_for(@recipe) do |f| %>

<p>
	<%= f.label :Nome %></br>
	<%= f.text_field :name %>
</p>

<p>
	<%= f.label :Ingredientes %></br>
	<%= f.text_area :stuff, cols: 50, rows:5%>
</p>

<p>
	<%= f.label :Calorias %></br>
	<%= f.text_field :calories%>
</p>

<p>
	<%= f.label :Modo_de_Preparo %></br>
	<%= f.text_area :prepare_mode, cols: 50, rows:5 %>
</p>

<p>
	<%= f.label :Custo %></br>
	<%= f.text_field :cost%>
</p>

<p>
	<%= f.submit %>
	<%= link_to "Cancelar", root_path %>
</p>

<% end %>