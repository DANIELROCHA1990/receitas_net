<%= form_for(@recipe) do |f| %>

<p>
	<%= f.label :Nome %></br>
	<%= f.text_field :name %>
</p>

<p>
	<%= f.label :Ingredientes %></br>
	<%= f.text_area :stuff, cols: 50, rows:5%>
</p>

<p>
	<%= f.label :Tipo %></br>
	<%= f.text_field :kind %>
</p>

<p>
	<%= f.label :Calorias %></br>
	<%= f.text_field :calories%>
</p>

<p>
	<%= f.label :Modo_de_Preparo %></br>
	<%= f.text_area :prepare_mode, cols: 50, rows:5 %>
</p>

<p>
	<%= f.label :Tempo_de_preparo %></br>
	<%= f.time_select :duration %>
</p>

<p>
	<%= f.label :Porções %></br>
	<%= f.text_field :portion %>
</p>

<p>
	<%= f.label :Custo %></br>
	<%= f.text_field :cost%>
</p>

<p>
	<%= f.label :Poster %></br>
	<%= f.text_field :poster, placeholder: ".Gif, .jpg, .JPEG ou .PNG" %>
</p>

<p>
	<%= f.submit %>
	<%= link_to "Cancelar", root_path %>
</p>

<% end %>