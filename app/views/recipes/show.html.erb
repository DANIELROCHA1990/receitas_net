<article>
	<header>
		<h1><%= @recipe.name %></h1>
		<%= imagem(@recipe)  %>
	</header>

	<h2>Tipo</h2>
	<p>
	<%= @recipe.kind %>
	</p>

	<h2>Ingredientes</h2>
	<p>
	<%= @recipe.stuff%>
	</p>

	<h2>Calorias</h2>
	<p>
		<%= @recipe.calories%>
	</p>

	<h3>Modo de Preparo</h3>
	<p>
		<%= @recipe.prepare_mode%>
	</p>

	<h2>Tempo de Preparo</h2>
	<p>
	<%= @recipe.duration.to_s%> min
	</p>

	<h2>Porções</h2>
	<p>
	<%= pluralize(@recipe.portion, "porção", "porções") %>
	</p>

	<h3>Custo</h3>
	<p>
		<%= @recipe.cost%>
	</p>
</article>

<%= link_to "Receitas", recipes_path %>
<%= link_to "Editar Receita", edit_recipe_path(@recipe) %>
<%= link_to "Deletar", recipe_path(@recipe), method: :delete, data:{confirm: "Deseja deletar?"} %>
